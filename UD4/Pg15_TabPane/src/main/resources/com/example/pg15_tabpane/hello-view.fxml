<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TextField?>
<TabPane xmlns:fx="http://javafx.com/fxml"
         fx:controller="com.example.pg15_tabpane.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <tabs>
        <Tab text="Tab 1">
            <content>
                <VBox alignment="CENTER" spacing="20">
                    <TextField fx:id="tab1TextField" prefWidth="80"/>
                    <Label fx:id="tab1Label" mnemonicParsing="true">_Tab 1</Label>
                </VBox>
            </content>
        </Tab>
        <Tab text="Tab 2">
            <content>
                <VBox alignment="CENTER" spacing="20">
                    <TextField fx:id="tab2TextField" prefWidth="80.0"/>
                    <Label fx:id="tab2Label" mnemonicParsing="true">_Tab 2</Label>
                </VBox>
            </content>
        </Tab>
    </tabs>
</TabPane>
